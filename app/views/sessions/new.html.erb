<h1>Sign in</h1>

<%= form_with url: session_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, autofocus: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>

<p>
  Need an account?
  <%= link_to "Create one", new_registration_path %>
</p>
