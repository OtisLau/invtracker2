<h1>Create your account</h1>

<%= form_with model: @user, url: registrations_path, local: true do |form| %>
  <div>
    <%= form.label :name, "Name (optional)" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true %>
  </div>

  <div>
    <%= form.label :store_id, "Store" %>
    <% if @stores.any? %>
      <%= form.collection_select :store_id, @stores, :id, :name, prompt: "Select a store" %>
    <% else %>
      <p>No stores available yet. Please contact an administrator.</p>
    <% end %>
  </div>

  <p>Your account will be created with standard employee access.</p>

  <div>
    <%= form.submit "Create account" %>
  </div>
<% end %>

<p>
  Already have an account?
  <%= link_to "Sign in", new_session_path %>
</p>
